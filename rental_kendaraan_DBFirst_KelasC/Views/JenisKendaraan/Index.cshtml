@model IEnumerable<rental_kendaraan_DBFirst_KelasC.Models.JenisKendaraan>

@{
    ViewData["Title"] = "Index";
}

<h2>JenisKendaraan</h2>

<p>
    <a asp-action="Create">Create New</a>
    @using (Html.BeginForm("Index", "JenisKendaraan", FormMethod.Get))
    {
<p>
    JenisKendaraan : @Html.DropDownList("Jenis", "pilih kendaraan")
    Cari dari : @Html.TextBox("searchString")
    <input type="submit" value="filter">
</p>
}
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @*@Html.DisplayName("Nama Jenis Kendaraan")*@
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Nama Jenis Kendaraan</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NamaJenisKendaraan)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdJenisKendaraan">Ubah</a> |
                        <a asp-action="Details" asp-route-id="@item.IdJenisKendaraan">Detail</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdJenisKendaraan">Hapus</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
