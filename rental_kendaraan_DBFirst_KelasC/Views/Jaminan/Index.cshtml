@model IEnumerable<rental_kendaraan_DBFirst_KelasC.Models.Jaminan>

@{
    ViewData["Title"] = "Index";
}

<h2>Jaminan</h2>

<p>
    <a asp-action="Create">Create New</a>
    @using (Html.BeginForm("Index", "Jaminan", FormMethod.Get))
    {
<p>
    Jaminan : @Html.DropDownList("Jm", "pilih jaminan")
    Cari dari : @Html.TextBox("searchString")
    <input type="submit" value="filter">
</p>
    }
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @*@Html.DisplayName("Nama Jaminan")*@
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Nama Jaminan</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NamaJaminan)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdJaminan">Ubah</a> |
                        <a asp-action="Details" asp-route-id="@item.IdJaminan">Detail</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdJaminan">Hapus</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
